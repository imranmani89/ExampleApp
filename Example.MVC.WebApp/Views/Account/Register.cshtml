@model UserRegisterModel

<div class="card">
	<div class="card-header">
		<div class="card-title">
			Welcome!
		</div>
	</div>
	<div class="card-body">
		<form method="post" asp-controller="Account" asp-area="" asp-action="Register">
			<div class="col-md-2 col-sm-12">Full Name</div>
			<div class="col-md-8 col-sm-12 text-start"><input class="input-group-text" asp-for="@Model.FullName" /></div>

			<div class="col-md-2 col-sm-12">Email</div>
			<div class="col-md-8 col-sm-12 text-start"><input class="input-group-text" asp-for="@Model.Email" /></div>

			<div class="col-md-2 col-sm-12">Username</div>
			<div class="col-md-8 col-sm-12 text-start"><input class="input-group-text" type="text" asp-for="@Model.Username" /></div>

			<div class="col-md-2 col-sm-12">Password</div>
			<div class="col-md-8 col-sm-12 text-start"><input class="input-group-text" type="password" asp-for="@Model.Password" /></div>

			<div class="col-md-2 col-sm-12 my-2"><button type="submit" class="btn btn-primary">Add</button></div>
		</form>
	</div>
</div>